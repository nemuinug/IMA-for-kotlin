<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#E0E0E0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 🔹 ヘッダー -->

    <!-- 🔹 入力エリア -->

    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="412dp"
        android:layout_height="70dp"
        android:background="#DFF0D8"
        android:gravity="center"
        android:padding="12dp"
        android:text="在庫管理"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 🔹 RecyclerView -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inputContainer"
        android:layout_width="409dp"
        android:layout_height="81dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerTitle">

        <!-- 画像アイコン -->
        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="アイコン"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <!-- タイトル入力 -->
        <EditText
            android:id="@+id/itemTitle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/white"
            android:hint="タイトル"
            android:padding="8dp"
            android:textColorHint="#AAAAAA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/itemQuantity"
            app:layout_constraintStart_toEndOf="@id/itemImage"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 数量入力 -->
        <EditText
            android:id="@+id/itemQuantity"
            android:layout_width="82dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:background="@color/white"
            android:hint="数量"
            android:inputType="number"
            android:padding="8dp"
            android:textColorHint="#AAAAAA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/addButton"
            app:layout_constraintStart_toEndOf="@id/itemTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 追加ボタン -->
        <Button
            android:id="@+id/addButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#2196F3"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/increase_button"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listid"
        android:layout_width="411dp"
        android:layout_height="738dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputContainer"
        tools:listitem="@layout/list_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
